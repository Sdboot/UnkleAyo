# Resend Email API Key
# Get your API key from: https://resend.com
RESEND_API_KEY=your_resend_api_key_here

# Server Port (optional, defaults to 3001)
PORT=3001

# Paystack Configuration
# Get keys from: https://dashboard.paystack.com/settings/developer
PAYSTACK_SECRET_KEY=your_paystack_secret_key_here
VITE_PAYSTACK_PUBLIC_KEY=pk_test_your_paystack_public_key_here

# ngrok Authtoken - for permanent ngrok URLs
NGROK_AUTHTOKEN=your_ngrok_authtoken_here

# Public URL for remote access (optional)
# Use this if you want to enable access from devices not on the same WiFi
# Example: https://abc123.ngrok.io
VITE_PUBLIC_URL=http://localhost:3001

# Admin email for notifications
ADMIN_EMAIL=your_admin_email@example.com
